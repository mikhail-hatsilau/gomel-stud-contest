doctype html
html
  head
    block title
      title GUUC
    link(rel="stylesheet", href="/styles/lib/jquery-ui.min.css")
    link(rel="stylesheet", href="/styles/styles.css")
    block link
  body
    .wrapper(class=editorPage ? "editor-page": "")
      .header.mui-appbar.mui--z3
        a.brand.mui--appbar-height.mui--appbar-line-height(href="/") GUUC
        block header
          ul.mui--appbar-height.mui--appbar-line-height
            if user
              case user.role.name
                when "admin"
                  li
                    a(href="/marks") Marks
                  li.mui-dropdown
                    a(href="#", data-mui-toggle="dropdown") Results
                      <span class="mui-caret"></span>
                    ul.mui-dropdown__menu
                      li
                        a(href="/firstStepResults") Step 1
                      li
                        a(href="/quizResults") Step 2
                  li
                    a(href="/users") Users
                  li.mui-dropdown
                    a(href="#", data-mui-toggle="dropdown") Tasks
                      <span class="mui-caret"></span>
                    ul.mui-dropdown__menu
                      li
                        a(href="/firstStepTasks") Step 1
                      li
                        a(href="/quizStepTasks") Step 2
                  li
                    a.start-first-step(href="#") Start step 1
                  li
                    a(href="/quizBoard") CSS Quiz board

        ul.right.mui--appbar-height.mui--appbar-line-height
          if user
            li= user.username
              a(href="/logout") Logout
          else
            li
              a(href="/login") Login
      .content
        block content
    .footer Developed by Mikhail Hatsilau
    script(src="//cdn.muicss.com/mui-0.4.7/js/mui.min.js")
    script(src="/socket.io/socket.io.js")
    script var socketIo = io()
    script(src="/scripts/main.js")
    block scripts
