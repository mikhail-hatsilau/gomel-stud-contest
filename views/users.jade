extends ./layout/layout

block title
  title Users

block content
  .container
    .head-controls
      h1 Users
      .button-set
        button.btn.btn-dark-green.add-new-user Add
    table.users-list      
      thead
        tr
          th Username
          th Firstname
          th LastName
          th Role
          th Active
          th
      tbody
        each user in users
          tr(data-id="#{user.id}")
            td.username= user.username
            td.firstname= user.firstName
            td.lastname= user.lastName
            td.roles(data-roleid=user.role.id)= user.role.name
            td
              input.ativate-user(type="checkbox", name="active", checked=!!user.active, autocomplete="off")
            td
              button.edit-btn.edit-user
                i.fa.fa-pencil-square-o
              button.remove-btn.remove-user
                i.fa.fa-trash

  #addUserPopup
    include ./includes/addUserPopup
  #removeConfirmationDialog
    include ./includes/removeConfirmationPopup
  #editUserPopup
    include ./includes/editUserPopup
