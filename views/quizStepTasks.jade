extends ./layout/layout

block content
  a.mui-btn.mui-btn--primary.add-new-task(href="/addQuizStepTask") Add
  table.mui-table.mui-table--bordered.tasks-list(data-type="quizTasks")     
    thead
      tr
        th Id
        th Name
        th Display number
        th Weight
        th Answare
        th Deprecated selectors
        th
    tbody
      each task in tasks
        tr(data-id=task.id)
          td= task.id
          td= task.name
          td= task.displayNumber
          td= task.weight
          td= task.answares
          td= task.deprecatedSelectors
          td
            a.edit-btn(href="/editQuizStepTask/#{task.id}")
              i.fa.fa-pencil-square-o
            button.remove-btn.remove-task
              i.fa.fa-trash

  #removeConfirmationDialog
    include ./includes/removeConfirmationPopup.jade
