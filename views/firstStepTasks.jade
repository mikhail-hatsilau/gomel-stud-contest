extends ./layout/layout

block title
  title Step 1 tasks

block content
  .container
    .head-controls
      h1 First step Tasks
      .button-set
        a.btn.btn-dark-green.add-new-task(href="/addFirstStepTask") Add
    table.tasks-list
      thead
        tr
          th Id
          th Name
          th.sort(data-col=2) Display number
          th.sort(data-col=3) Weight
          th Active
          th
      tbody
        each task in tasks
          tr(data-id=task.id)
            td= task.id
            td= task.name
            td
              span.sort-item= task.displayNumber
            td
              span.sort-item= task.weight
            td
              input.active-task(type="checkbox", name="active", value=task.active, autocomplete="off", checked=task.active ? true : false)
            td
              a.edit-btn(href="/editFirstStepTask/#{task.id}")
                i.fa.fa-pencil-square-o
              button.remove-btn.remove-task
                i.fa.fa-trash

  #removeConfirmationDialog
    include ./includes/removeConfirmationPopup.jade
